{
    "name": "victorybiz/unified-sms",
    "description": "Unified SMS library package for Laravel and PHP (Non-Laravel) to send text messages through multiple swappable drivers.",
    "keywords": ["php","github","laravel","laravel 5", "laravel 6","Open Source", "sms", "messaging", "text messaging", "routesms", "routemobile", "nexmo", "betasms", "moreify", "multitexter"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Victory Osayi",
            "email": "lavictorybiz@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "6.*"
    }, 
    "require-dev": {
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "psr-4": {
            "Victorybiz\\UnifiedSMS\\": "src"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Victorybiz\\UnifiedSMS\\UnifiedSMSServiceProvider"
            ],
            "aliases": {
                "UnifiedSMS": "Victorybiz\\UnifiedSMS\\Facades\\UnifiedSMSFacade"
            }
        }
    }
}
